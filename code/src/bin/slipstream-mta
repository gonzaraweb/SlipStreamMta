#!/usr/bin/env python

import sys

from com.sixsq.mta import MTA
from com.sixsq.mta.daemon import DaemonRunner

def main():
    try:
        DaemonRunner(MTA)
    except Exception, e:
        sys.stderr.write('%s\n' % str(e))
        sys.exit(1)
    except KeyboardInterrupt:
        sys.exit(1)

if __name__ == "__main__":
    main()
